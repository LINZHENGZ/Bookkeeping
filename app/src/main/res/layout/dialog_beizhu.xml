<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/white">
    <TextView
            android:id="@+id/dialog_beizhu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加备注"
            android:textSize="16sp"
            android:textColor="@color/black"/>
    <EditText
            android:id="@+id/dialog_beizhu_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_beizhu_tv"
            android:hint="备注"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textSize="14sp"
            android:background="@color/white">
        <requestFocus/>

    </EditText>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/dialog_beizhu_et"
            android:padding="10dp">
        <Button
                android:id="@+id/dialog_beizhu_btleft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dialog_beizhu_btleft"
                android:background="@drawable/dialog_beizhu_bg"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>

        <Button
                android:id="@+id/dialog_beizhu_btright"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/dialog_beizhu_btright"
                android:background="@drawable/dialog_beizhu_bg"
                android:textStyle="bold"
                android:layout_marginRight="5dp"/>

    </LinearLayout>
</RelativeLayout>